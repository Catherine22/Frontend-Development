# docker run -p 3000:80 123987109832/react-app:latest
FROM node:16-alpine as builder

WORKDIR '/app'

COPY package.json .
RUN npm install
COPY . .
RUN npm run build

FROM nginx
# Copy over sth from another phase (builder)
COPY --from=builder /app/build /usr/share/nginx/html